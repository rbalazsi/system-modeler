<BorderPane fx:id="mainPane" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.71" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.robertbalazsi.systemmodeler.MainController">


    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" text="New" />
                                <MenuItem mnemonicParsing="false" text="Exit" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Preferences" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="View">
                            <items>
                        <Menu mnemonicParsing="false" text="Tool Windows">
                           <items>
                              <CheckMenuItem mnemonicParsing="false" text="Palette" />
                              <CheckMenuItem mnemonicParsing="false" text="Structure" />
                           </items>
                        </Menu>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <ToolBar>
                    <items>
                        <Button text="Button">
                        </Button>
                    </items>
                </ToolBar>
            </children>
        </VBox>
    </top>

    <left>
        <AnchorPane prefWidth="150.0" BorderPane.alignment="CENTER">
            <children>
                <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefWidth="150.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <items>
                        <TitledPane animated="false" collapsible="false" text="Palette">
                            <content>
                                <Accordion>
                                    <panes>
                                        <TitledPane animated="false" text="Database">
                                            <content>
                                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                                            </content>
                                        </TitledPane>
                                        <TitledPane animated="false" text="Shapes">
                                            <content>
                                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                                            </content>
                                        </TitledPane>
                                        <TitledPane animated="false" text="UML">
                                            <content>
                                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                                            </content>
                                        </TitledPane>
                                    </panes>
                                </Accordion>
                            </content></TitledPane>
                        <TitledPane animated="false" collapsible="false" text="Structure" />
                    </items>
                </SplitPane>
            </children>
        </AnchorPane>
    </left>

   <center>
      <Canvas AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" BorderPane.alignment="CENTER" />
   </center>
   <right>
      <AnchorPane prefWidth="150.0" BorderPane.alignment="CENTER">
         <children>
            <TitledPane animated="false" collapsible="false" prefWidth="150.0" text="Properties" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
         </children>
      </AnchorPane>
   </right>

</BorderPane>
